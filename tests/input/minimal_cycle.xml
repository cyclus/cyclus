<?xml version="1.0"?>
<!-- 1 SimpleSource Source, 1 SimpleSink Sink -->

<simulation>
  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>0</decay>
  </control>

  <commodity>
    <name>commodityA</name>
  </commodity>

  <commodity>
    <name>commodityB</name>
  </commodity>

  <facility>
    <name>FacilityA</name>
    <module>
      <path>KFacility</path>
      <agent>KFacility</agent>
    </module>
    <agent>
      <KFacility>
        <in_commod_>commodityB</in_commod_>
        <in_capacity_>1</in_capacity_>
        <k_factor_in_>1</k_factor_in_>
        <out_commod_>commodityA</out_commod_>
        <recipe_name_>commod_recipe</recipe_name_>
        <out_capacity_>1</out_capacity_>
        <k_factor_out_>1</k_factor_out_>
      </KFacility>
    </agent>
  </facility>

  <facility>
    <name>FacilityB</name>
    <module>
      <path>KFacility</path>
      <agent>KFacility</agent>
    </module>
    <agent>
      <KFacility>
        <in_commod_>commodityA</in_commod_>
        <in_capacity_>1</in_capacity_>
        <k_factor_in_>1</k_factor_in_>
        <out_commod_>commodityB</out_commod_>
        <recipe_name_>commod_recipe</recipe_name_>
        <out_capacity_>1</out_capacity_>
        <k_factor_out_>1</k_factor_out_>
      </KFacility>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <module>
      <path>NullRegion</path>
      <agent>NullRegion</agent>
    </module>
    <allowedfacility>FacilityA</allowedfacility>
    <allowedfacility>FacilityB</allowedfacility>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <module>
        <path>NullInst</path>
        <agent>NullInst</agent>
      </module>
      <availableprototype>FacilityA</availableprototype>
      <availableprototype>FacilityB</availableprototype>
      <initialfacilitylist>
        <entry>
          <prototype>FacilityA</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>FacilityB</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent>
        <NullInst/>
      </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
