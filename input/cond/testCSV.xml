<?xml version="1.0"?>
<!-- 1 SourceFacility FrontEnd, 1 ConditioningFacility BackEnd, and 1 NullMarket -->
<simulation>
  <duration>10</duration>
  <startmonth>1</startmonth>
  <startyear>2000</startyear>
  <simstart>0</simstart>
  <decay>2</decay>

  <commodity>
    <name>uo2</name>
  </commodity>

  <market>
    <name>uo2market</name>
    <mktcommodity>uo2</mktcommodity>
    <model>
      <NullMarket/>
    </model>
  </market>

  <facility>
    <name>FrontEnd</name>
    <model>
      <SourceFacility>
        <outcommodity>uo2</outcommodity>
        <capacity>5</capacity>
        <inventorysize>1e4</inventorysize>
        <commodprice>0</commodprice>
        <recipe>fresh_50gwd</recipe>
      </SourceFacility>
    </model>
  </facility>

  <facility>
    <name>BackEnd</name>
    <model>
      <ConditioningFacility>
        <capacity>10</capacity>
        <fileformat>csv</fileformat>
        <datafile>input/cond/test.csv</datafile>
        <commodpair>
          <incommodity>uo2</incommodity>
          <id>1</id>
        </commodpair>
      </ConditioningFacility>
    </model>
  </facility>

  <region>
    <name>oneRegion</name>
    <allowedfacility>FrontEnd</allowedfacility>
    <allowedfacility>BackEnd</allowedfacility>
    <model>
      <NullRegion/>
    </model>
    <institution>
      <name>oneInst</name>
      <model>
        <FixedInst>
          <facility>
            <type>FrontEnd</type>
            <name>FrontEnd</name>
          </facility>
          <facility>
            <type>BackEnd</type>
            <name>BackEnd</name>
          </facility>
        </FixedInst>
      </model>
    </institution>
  </region>

  <recipe>
    <name>fresh_50gwd</name>
    <basis>mass</basis>
    <unit>assembly</unit>
    <total>1000</total>
    <isotope>
      <id>92235</id>
      <comp>0.05</comp>
    </isotope>
    <isotope>
      <id>92238</id>
      <comp>0.95</comp>
    </isotope>
    <isotope>
      <id>08016</id>
      <comp>0.13</comp>
    </isotope>
  </recipe>

</simulation>
