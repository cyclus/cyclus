<?xml version="1.0"?>
<!-- 1 SimpleSource Source, 1 SimpleSink Sink -->

<simulation>
  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>0</decay>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <facility>
    <name>KFacility</name>
    <agent>
      <KFacility>
        <in_commod_>commodity</in_commod_>
        <in_capacity_>1</in_capacity_>
        <k_factor_in_>1</k_factor_in_>
        <out_commod_>commodity</out_commod_>
        <recipe_name_>commod_recipe</recipe_name_>
        <out_capacity_>1</out_capacity_>
        <k_factor_out_>1</k_factor_out_>
      </KFacility>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <allowedfacility>KFacility</allowedfacility>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <availableprototype>KFacility</availableprototype>
      <initialfacilitylist>
        <entry>
          <prototype>KFacility</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent>
        <NullInst/>
      </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
